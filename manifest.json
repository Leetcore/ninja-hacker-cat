{
	"manifest_version": 2,
	"name": "Ninja-Hacker-Cat",
	"description": "Ninja-Hacker-Cat makes web security checks for you!",
	"version": "1.2",
	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "54.0a1"
		}
	},
	"browser_action": {
		"default_icon": "/images/cat-default.svg",
		"default_title": "Miau!"
	},
	"background": {
		"scripts": ["/scripts/background.js"]
	},
	"permissions": [
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	]
}